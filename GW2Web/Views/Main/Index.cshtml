@{
    ViewBag.Title = "GW2 API";
}

<div class="row" ng-controller="gw2api">
    <div class="col-md-3">
        <h2>Worlds</h2>
        <div class="list-group">
            <a href="#" class="fader-animation list-group-item {{w.active}}" ng-repeat="w in worlds | orderBy:'name'" ng-click="setWorld(w.id)">{{w.name}}</a>
        </div>
    </div>
    <div class="col-md-3">
        <h2>Maps</h2>
        <div class="list-group">
            <a href="#" class="fader-animation list-group-item {{m.active}}" ng-repeat="m in maps| orderBy:'name'" ng-click="setMap(m.id)">{{m.name}}</a>
        </div>
    </div>
    <div class="col-md-6">
        <h2>Events <span class="fa fa-1x fa-refresh pull-right btn btn-default" ng-click="loadEvents()"></span></h2>
        <div class="list-group">
            <a href="#" class="fader-animation list-group-item alert-{{e.status}}" ng-repeat="e in events">{{e.name}}</a>
        </div>
    </div>
</div>